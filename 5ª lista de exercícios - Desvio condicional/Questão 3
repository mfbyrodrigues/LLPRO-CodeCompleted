#include <stdio.h>
#include <locale.h>

// “Corrida de aventura”. Em uma corrida, os participantes partem de um mesmo local, avançam pela floresta tentando chegar ao destino. Vence quem chegar ao destino em menos tempo. Faça um programa onde a equipe ganha sempre que acerta todos os pontos possíveis do caminho. Use o mapa para criar seu código.

// FAZER ALTERAÇÕES NESTE CÓDIGO!!!!!!!!!!!!!!!!!!!!!!!

int main () {

    setlocale(LC_ALL, "Portuguese");

    int opcao, op1, opcaminho, caminho3;

    printf ("Escolha um caminho : \n");
    printf ("[1] \n");
    printf ("[2] \n");
    printf ("[3] \n");

    scanf("%d",&opcao);


    switch(opcao) {

        case 1:
            printf(" Deseja continuar ou avançar? \n");
            printf("[1] - Continuar; \n");
            printf("[2] - Avançar. \n");
            scanf("%d", &op1);

            if(op1==1){
                printf("Tá quase lá, macho, quer continuar mesmo? \n");


            printf("[1] - Sim");
            printf("[2] - Não");

            scanf("%d", &opcaminho);

            } else{
                printf("Opa, você não gostou do caminho e foi eliminado!");
            }
            if(opcaminho==1){
                printf("Parabéns! Você venceu a corrida! \n");
                return 0;

            } else{
                printf("Opa, você não gostou do caminho e foi eliminado!");
            }

            break;

            case 2:
            printf("HAHA FUDEU");

            break;


            case 3:

            printf("Você quer ficar ou ir?");
            printf("[1] - Ficar");
            printf("[2] - Ir");


            scanf("%d", &caminho3);

            if (caminho3==1) {
                printf("Quer continuarsdjksfs:");
            }

            else{
                printf("Se fudeu! \n");
            }
            break;

    }
}
